<div class="tab demonlord-v2-tab scrollable {{cssClass}}" data-group="primary" data-tab="effects">
  <ol class="items-list effects-list" style="margin: 0; padding: 0 8px;">
    {{#each effects as |section sid|}}
    <li class="items-header flexrow" data-effect-type="{{section.type}}">
      <div class="item-name effect-name flexrow">{{localize section.name}}</div>
      <div class="effect-source">{{localize "DL.EffectDuration"}}</div>
      <div class="effect-controls flexrow">
        {{#if section.showCreateButtons}}
        <a class="effect-control" data-action="createEffect" title="{{localize 'DL.EffectCreate'}}">
          <i class="fas fa-plus"></i>
        </a>
        {{/if}}
      </div>
    </li>

    <ol class="item-list">
      {{#each section.effects as |effect|}}
      <li class="item effect flexrow" data-effect-id="{{effect.id}}">
        <div class="item-name effect-name flexrow">
          {{#if effect.tint}}
          <img class="item-image-small" src="{{effect.img}}" />
          {{else}}
          <img class="item-image-small" src="{{effect.img}}" />
          {{/if}}
          <h4>{{effect.name}}</h4>
        </div>
        <div class="effect-duration">{{effect.duration.name}}</div>
        <div class="effect-controls flexrow">
          {{#if (eq section.showControls 1)}}
          <a class="effect-control" data-action="toggleEffect" title="{{localize 'DL.EffectToggle'}}">
            <i class="fas {{#if effect.disabled}}fa-toggle-off{{else}}fa-toggle-on{{/if}}"></i>
          </a>
          {{/if}} {{#if (eq section.showControls 2)}}
          <a class="effect-control" data-action="toggleEffect" title="{{localize 'DL.EffectToggle'}}">
            <i class="fas {{#if effect.disabled}}fa-toggle-off{{else}}fa-toggle-on{{/if}}"></i>
          </a>
          <a class="effect-control" data-action="editEffect" title="{{localize 'DL.EffectEdit'}}">
            <i class="fas fa-edit"></i>
          </a>
          {{/if}} {{#if (eq section.showControls 3)}}
          <a class="effect-control" data-action="toggleEffect" title="{{localize 'DL.EffectToggle'}}">
            <i class="fas {{ifThen effect.disabled "fa-toggle-off" "fa-toggle-on" }}"></i>
          </a>
          <a class="effect-control" data-action="editEffect" title="{{localize 'DL.EffectEdit'}}">
            <i class="fas fa-edit"></i>
          </a>
          <a class="effect-control" data-action="deleteEffect" title="{{localize 'DL.EffectDelete'}}">
            <i class="fas fa-times"></i>
          </a>
          {{/if}}
        </div>
      </li>
      {{/each}}
    </ol>
    {{/each}}
  </ol>
</div>