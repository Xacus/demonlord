<div class="tab demonlord-v2-tab scrollable {{cssClass}}" data-group="primary" data-tab="language">
  <div class="dl-item-section-header">
    <b>{{item.name}}</b>
  </div>

  <div class="dl-item-section">
    {{#*inline "LangType"}}
      <div class="item-group-language checkable" data-action="{{action}}">
        <div class="input-group">
          <input type="checkbox" name="system.{{name}}" {{checked selected}} />
          <i class="icon-{{name}} themed-icon"></i>
          <span class="sep"></span>
          <span class="text">{{localize loc}}</span>
        </div>
      </div>
    {{/inline}}

    <div class="item-properties language-checkboxes">
      {{> LangType name="speak" selected=system.speak loc="DL.LanguagesSpeak" action="toggleSpeak"}}
      {{> LangType name="read"  selected=system.read  loc="DL.LanguagesRead" action="toggleRead"}}
      {{> LangType name="write" selected=system.write loc="DL.LanguagesWrite" action="toggleWrite"}}
    </div>
  </div>

  {{> "systems/demonlord/templates/item/partial/item-description.hbs" description=system.description enrichedDescription=system.enrichedDescription}}

</div>