<div class="tab demonlord-v2-tab scrollable {{cssClass}}" data-group="primary" data-tab="path">
  <div class="sidebar-content-container">
    <div class="level-sidebar">
      {{PathDropdown 'system.type' system.type}}

      {{#each system.levels as |level index|}}
        <div class="dl-clickable" data-action="selectLevel" data-level-index="{{index}}">
          {{localize 'DL.PathsLevelsSubTitle'}} {{level.level}}
        </div>
      {{/each}}
      {{#if system.editPath}}
      <a class="item-control add-level" data-action="addLevel" data-tippy-content="{{localize 'DL.PathsAddLevel'}}">
        <i class="fas fa-plus"></i>
      </a>
      {{/if}}
    </div>

    <span class="panel-sep"></span>

    <div class="level-content">
      {{#if system.editPath}}
        {{> "systems/demonlord/templates/item/item-path-edit.hbs"}}
      {{else}}
        {{> "systems/demonlord/templates/item/item-path-view.hbs"}}
      {{/if}}
    </div>
  </div>
</div>
