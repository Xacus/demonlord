{{!--
  Context:
  - filters.spell
    - tradition
    - rank
    - source
    - type
    - attribute
    - isTriggered
    - description
    - isHealing
    - isDamage
    - // isInsanity
    - // isCorruption
    - hasChallenge
--}}
<div class="demonlord-compendium-browser-filters">

  <div class="filter-group">
    <b>{{localize 'DL.MagicTradition'}}</b>
    <input type="text" class="filter-group-textbox" name="filters.spell.tradition" value="{{filters.spell.tradition}}">
  </div>

  <div class="filter-group">
    <b>{{localize 'DL.SpellRank'}}</b>
    <input type="number" class="filter-group-textbox" name="filters.spell.rank" placeholder="" min="0" max="10" step="1" value="{{filters.spell.rank}}">
  </div>

  <div class="filter-group">
    <b>{{localize 'DL.CompendiumBrowser.Filters.Source'}}</b>
    <input type="text" class="filter-group-textbox" name="filters.spell.source" value="{{filters.spell.source}}">
    {{!-- Dropdown with all compendia --}}
  </div>

  <div class="filter-group">
    <b>{{localize 'DL.SpellType'}}</b>
    <select class="filter-group-textbox" name="filters.spell.type" value="{{filters.spell.type}}">
      <option value="A">{{localize 'DL.CompendiumBrowser.Filters.Type.Attack'}}</option>
      <option value="U">{{localize 'DL.CompendiumBrowser.Filters.Type.Utility'}}</option>
    </select>
  </div>

  <div class="filter-group">
    <b>{{localize 'DL.SpellAttribute'}}</b>
    <select class="filter-group-textbox" name="filters.spell.attribute" value="{{filters.spell.attribute}}">
      {{!-- <option value="strength">{{localize 'DL.AttributeStrength'}}</option> --}}
      {{!-- <option value="agility">{{localize 'DL.AttributeAgility'}}</option> --}}
      <option value="intellect">{{localize 'DL.AttributeIntellect'}}</option>
      <option value="will">{{localize 'DL.AttributeWill'}}</option>
    </select>
  </div>

  <div class="filter-group checkable">
    <div class="input-group" data-tippy-content="{{localize 'DL.CompendiumBrowser.Filters.IsTriggered'}}">
      <input type="checkbox" name="filters.spell.isTriggered" {{checked filters.spell.isTriggered}}>
      <i class="icon-triggered themed-icon"></i>
      <span class="sep"></span>
      <span class="text">{{localize 'DL.SpellTriggered'}}</span>
    </div>
  </div>

  <div class="filter-group checkable">
    <div class="input-group" data-tippy-content="{{localize 'DL.CompendiumBrowser.Filters.IsHealing'}}">
      <input type="checkbox" name="filters.spell.isHealing" {{checked filters.spell.isHealing}}>
      <i class="icon-healing themed-icon"></i>
      <span class="sep"></span>
      <span class="text">{{localize 'DL.TalentHealing'}}</span>
    </div>
  </div>

  <div class="filter-group checkable">
    <div class="input-group" data-tippy-content="{{localize 'DL.CompendiumBrowser.Filters.IsDamage'}}">
      <input type="checkbox" name="filters.spell.isDamage" {{checked filters.spell.isDamage}}>
      <i class="icon-damage themed-icon"></i>
      <span class="sep"></span>
      <span class="text">{{localize 'DL.TalentDamage'}}</span>
    </div>
  </div>

  <div class="filter-group checkable">
    <div class="input-group" data-tippy-content="{{localize 'DL.CompendiumBrowser.Filters.HasChallenge'}}">
      <input type="checkbox" name="filters.spell.hasChallenge" {{checked filters.spell.hasChallenge}}>
      <i class="icon-challenge themed-icon"></i>
      <span class="sep"></span>
      <span class="text">{{localize 'DL.ChallengeRoll'}}</span>
    </div>
  </div>

  <div class="filter-group">
    <b>{{localize 'DL.CharDescription'}}</b>
    <input type="text" class="filter-group-textbox" name="filters.spell.description" value="{{filters.spell.description}}">
  </div>
</div>
