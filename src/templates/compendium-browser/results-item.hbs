{{!--
  Context:
  - results
    - items
--}}
<div class="demonlord-compendium-browser-results scrollable {{#if (eq search.type 'item')}}active{{/if}}">
    <table>
        {{!-- Fields info --}}
        <tr>
            <th></th>
            <th class="sortable {{#if (eq search.sortColumn 'name')}}{{search.sortType}}{{/if}}" data-sort-property="name">{{localize 'DL.CreatureName'}}</th>
            <th class="sortable {{#if (eq search.sortColumn 'system.source')}}{{search.sortType}}{{/if}}" data-sort-property="system.source">{{localize 'DL.Source'}}</th>
            <th class="sortable {{#if (eq search.sortColumn 'system.availability')}}{{search.sortType}}{{/if}}" data-sort-property="system.availability">{{localize 'DL.Availability'}}</th>
            <th class="sortable {{#if (eq search.sortColumn 'system.consumabletype')}}{{search.sortType}}{{/if}}" data-sort-property="system.consumabletype">{{localize 'DL.ConsumableType'}}</th>

        </tr>

        {{#each results as |item|}}
            <tr data-item-id="{{item.uuid}}">
                <td><img src="{{item.img}}" alt="{{item.name}}"></td>
                <td class="clickable" data-action="editItem">{{item.name}}</td>
                <td>{{item.system.source}}</td>
                <td>{{localize (concat "DL.Availability" item.system.availability)}}</td>
                <td>{{localize (ifThen item.system.consumabletype (concat "DL.ConsumableType" item.system.consumabletype) "DL.ConsumableNone")}}</td>
            </tr>
        {{/each}}
    </table>
</div>
