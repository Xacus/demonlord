<aside class="demonlord-v2-actor-sheet-container demonlord-v2-actor-sheet-sidebar-container vehicle">
  <div class="sidebar" data-group="dashboard" data-tab="sidebar">

    <div class="frame frame-vehicle">
      <img class="profile-img img-cre" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}"
        data-edit="img" />
    </div>
    {{#if system.characteristics.health.injured}}
    <div class="injured-overlay"></div>
    {{/if}}

    <div class="char-stats">

      <div class="stat-box">
        <div class="text">{{localize "DL.TalentDamage"}}</div>
          <input class="value" name="system.characteristics.health.value" type="number"
            value="{{system.characteristics.health.value}}" data-dtype="Number" placeholder="" />
      </div>

      <div class="stat-box">
        <div class="text">{{localize "DL.CreatureHealth"}}</div>
          <input class="value" name="system.characteristics.health.max" type="number" value="{{system.characteristics.health.max}}"
            data-dtype="Number" placeholder="" />
      </div>

      <div class="stat-box">
        <div class="text">{{localize "DL.AttributeDefense"}}</div>
        <input class="value" name="system.characteristics.defense" type="number"
            value="{{system.characteristics.defense}}" data-dtype="Number" placeholder="" />
      </div>

      <div class="stat-box">
        <div class="text">{{localize "DL.VehicleCargo"}}</div>
        <input class="value" name="system.cargo" type="number"
            value="{{system.cargo}}" data-dtype="Number" placeholder="" />
      </div>

      <div class="stat-box">
        <div class="text">{{localize "DL.CharSize"}}</div>
        <input class="value" name="system.characteristics.size" type="text" value="{{system.characteristics.size}}"
            data-dtype="String" placeholder="" />
      </div>

      <div class="text-box space">
        <input name="system.space" type="text" value="{{system.space}}" data-dtype="String"
          placeholder="{{localize 'DL.VehicleSpace'}}" />
      </div>

      <div class="text-box space">
        <input name="system.maximumspeed" type="text" value="{{system.maximumspeed}}" data-dtype="String"
          placeholder="{{localize 'DL.VehicleMaximumSpeed'}}" />
      </div>

      <div class="text-box speedtraits">
        <input name="system.speedtraits" type="text" value="{{system.speedtraits}}" data-dtype="String"
          placeholder="{{localize 'DL.CreatureSpeedTraits'}}" />
      </div>

      <div class="text-box crew">
        <input name="system.crew" type="text" value="{{system.crew}}" data-dtype="String"
          placeholder="{{localize 'DL.VehicleCrew'}}" />
      </div>

    </div>
  {{#unless hideTurnMode}}
  <div class="char-toggles">
    <div class="turnmode">
      <div class="switch-toggle turn-toggle">
        <label class="switch" for="system.fastturn">
          <input class="toggleInput" type="checkbox" id="system.fastturn" name="system.fastturn" {{checked system.fastturn}} {{disabled system.maluses.noFastTurn}}/>
          <div class="toggleFill"></div>
          <span class="toggleText off">{{localize 'DL.TurnSlowButton'}}</span>
          <span class="toggleText on">{{localize 'DL.TurnFastButton'}}</span>
        </label>
      </div>
    </div>
  </div>
  {{/unless}}
  </div>
</aside>
