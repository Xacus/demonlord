<aside>
  <div class="sidebar" data-group="dashboard" data-tab="sidebar">
    <div class="framevehicle">
      <img class="profile-img img-cre" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>
    </div>
    <div class="charsstat">
      <div class="chars grid grid-2">
        <div class="speedbox">
          <div class="speedtext">{{localize "DL.TalentDamage"}}</div>
          <div class="speed">
            <input name="system.characteristics.health.value" type="number"
                   value="{{system.characteristics.health.value}}" data-dtype="Number" placeholder=""/>
          </div>
        </div>
        <div class="speedbox">
          <div class="speedtext">{{localize "DL.VehicleHealth"}}</div>
          <div class="speed">
            <input name="system.characteristics.health.max" type="number"
                   value="{{system.characteristics.health.max}}" data-dtype="Number" placeholder=""/>
          </div>
        </div>
      </div>
      <div class="chars grid grid-2">
        <div class="speedbox">
          <div class="speedtext">{{localize "DL.AttributeDefense"}}</div>
          <div class="speed"><input name="system.characteristics.defense" type="number"
                                    value="{{system.characteristics.defense}}" data-dtype="Number" placeholder=""/></div>
        </div>
        <div class="speedbox">
          <div class="speedtext">{{localize "DL.VehicleCargo"}}</div>
          <div class="speed"><input name="system.cargo" type="number"
                                    value="{{system.cargo}}" data-dtype="Number" placeholder=""/></div>
        </div>
      </div>
            <div class="chars grid grid-2">
        <div class="speedbox">
          <div class="speedtext">{{localize "DL.CharSize"}}</div>
          <div class="speed"><input name="system.characteristics.size" type="text"
                                    value="{{system.characteristics.size}}" data-dtype="String" placeholder=""/></div>
        </div>
      </div>
    </div>
    <div class="space">
      <input name="system.space" type="text" value="{{system.space}}" data-dtype="String" placeholder="{{localize 'DL.VehicleSpace'}}"/>
    </div>
    <div class="maximumspeed">
      <input name="system.maximumspeed" type="text" value="{{system.maximumspeed}}" data-dtype="String" placeholder="{{localize 'DL.VehicleMaximumSpeed'}}"/>
    </div>
    <div class="speedtraits">
      <input name="system.speedtraits" type="text" value="{{system.speedtraits}}" data-dtype="String" placeholder="{{localize 'DL.VehicleSpeedTraits'}}"/>
    </div>
    <div class="crew">
      <input name="system.crew" type="text" value="{{system.crew}}" data-dtype="String" placeholder="{{localize 'DL.VehicleCrew'}}"/>
    </div>
    <div class="turnmode">
      <label class="switchTurn">
        <input type="checkbox" id="system.fastturn" name="system.fastturn" {{checked system.fastturn}}>
        <div class="slider round">
          <span class="on">{{localize "DL.TurnFastButton"}}</span>
          <span class="off">{{localize "DL.TurnSlowButton"}}</span>
        </div>
      </label>
    </div>
  </div>
</aside>
