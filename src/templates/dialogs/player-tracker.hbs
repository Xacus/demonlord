<section class="{{cssClass}}">
  {{!-- <div class="tab character" data-group="primary" data-tab="character"> --}}
    <div class="donslide">
      {{#each persons as |person id|}}
        <div class="item">
          <div class="player">{{person.playername}}</div>
          <div>
            <b>{{localize "DL.CharName"}}:</b>
            <a class="entity-link" data-entity="Actor" data-id="{{person.playerid}}">{{person.charactername}}</a>
          </div>
          <div><b>{{localize "DL.CharAncestry"}}: </b>{{person.ancestry}}</div>
          <br/>
          <div><b>{{localize "DL.CharPathNovice"}}: </b>{{person.paths.novice}}</div>
          <div><b>{{localize "DL.CharPathExpert"}}: </b>{{person.paths.expert}}</div>
          <div><b>{{localize "DL.CharPathMaster"}}: </b>{{person.paths.master}}</div>
          <div><b>{{localize "DL.CharPathLegendary"}}: </b>{{person.paths.legendary}}</div>
          <br/>
          <div>
            <b>{{localize "DL.CharProfessions"}}: </b><br/>
            {{#each person.professions as |profession id|}} &#9679; {{profession.name}}<br/>
            {{/each}}
          </div>
          <br/>
          <div><b>{{localize "DL.CharHealthDamage"}}: </b>{{person.damage}}</div>
          <div><b>{{localize "DL.CharInsanity"}}: </b>{{person.insanity.value}}</div>
          <div><b>{{localize "DL.CharCorruption"}}: </b>{{person.corruption.value}}</div>
          <br/>
          <div><b>{{localize "DL.AttributeDefense"}}: </b>{{person.defense}}</div>
          <div><b>{{localize "DL.CharPower"}}: </b>{{person.power}}</div>
          <div><b>{{localize "DL.CharSpeed"}}: </b>{{person.speed}}</div>
          <div><b>{{localize "DL.CharFortune"}}: </b>{{person.fortune}}</div>
          <br/>
        </div>
      {{/each}}
    </div>
